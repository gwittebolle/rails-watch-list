<div class="container mx-auto border bg-light p-3 m-3">
<h1>Ajouter un film</h1>

<div class="border p-3">
<h5> Films disponibles</h5>
<ul class="list-inline">
<% @movies.each do |movie| %>
    <li class="list-inline-item"><%=movie.title%></li>
<% end %>
</ul>
</div>
<br>

<%= simple_form_for [@movie, @list, @bookmark] do |f| %>
  <%= f.input :comment %>
  <%= f.association :movie, :collection => @movies, include_blank:  false, include_hidden: true %>
  <%= f.submit "Ajouter un film", class: "btn btn-primary" %>
<% end %>
</div>
